# =============================================================================
# NFL Sports Betting System Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# API Keys
ODDS_API_KEY=your_odds_api_key_here
WEATHER_API_KEY=

# Database
DATABASE_URL=sqlite:///data/sports_betting.db

# API Limits (The Odds API free tier = 500/month)
ODDS_API_MONTHLY_LIMIT=500
ODDS_API_DAILY_BUDGET=30

# Betting Thresholds
MIN_EDGE_PCT=3.0
MIN_CONFIDENCE=0.65
MAX_EDGE_PCT=50.0

# Bankroll Management
DEFAULT_BANKROLL=10000
MAX_BET_FRACTION=0.05
DEFAULT_STAKE=100

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Discord Notifications (get webhook from Discord server settings)
DISCORD_WEBHOOK_URL=
DISCORD_NOTIFY_MIN_EDGE=5.0

# Scheduling (times in ET)
ODDS_FETCH_HOUR=10
PREDICTIONS_DAY=Thursday
SCORING_DAY=Tuesday
